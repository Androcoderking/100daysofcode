#include <iostream>
#include <string>
using namespace std;

int main() {
  string a;
  string b;
  cin >> a;
  cin >> b;
  cout << a.size() << " ";
  cout << b.size();
  cout << endl;
  cout << a + b;
  cout << endl;
  char c;
  c = b[0];
  b[0] = a[0];
  a[0] = c;
  cout << a << " " << b;

  return 0;
}

